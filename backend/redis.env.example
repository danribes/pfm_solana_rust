# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Connection Pool Settings
REDIS_POOL_SIZE=10
REDIS_MIN_POOL_SIZE=2
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_ACQUIRE_TIMEOUT=30000
REDIS_CREATE_TIMEOUT=30000
REDIS_DESTROY_TIMEOUT=5000
REDIS_IDLE_TIMEOUT=30000
REDIS_REAP_INTERVAL=1000

# Redis Performance Settings
REDIS_KEEP_ALIVE=30000
REDIS_ENABLE_READY_CHECK=true
REDIS_MAX_LOADING_TIMEOUT=10000
REDIS_LAZY_CONNECT=true
REDIS_ENABLE_OFFLINE_QUEUE=true

# Redis Security Settings
REDIS_TLS=false
REDIS_TLS_INSECURE=false

# Redis Advanced Settings
REDIS_ENABLE_AUTO_PIPELINING=false
REDIS_MAX_AUTO_PIPELINING=32
REDIS_SHOW_ERROR_STACK=false

# Test Environment Redis Settings
TEST_REDIS_DB=1
TEST_REDIS_POOL_SIZE=5
TEST_REDIS_MIN_POOL_SIZE=1 