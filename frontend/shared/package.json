{
  "name": "pfm-shared-components",
  "version": "1.0.0",
  "description": "Shared Components for PFM Community Management Application",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=\"(unit|components)\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "type-check": "tsc --noEmit",
    "ci:test": "npm run lint && npm run type-check && npm run test:ci",
    "build": "tsc"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.2.2",
    "whatwg-fetch": "^3.6.19"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "shared",
    "components",
    "react",
    "typescript",
    "testing",
    "docker",
    "containerized"
  ],
  "author": "PFM Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
