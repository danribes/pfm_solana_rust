{
  "name": "pfm-member-portal",
  "version": "1.0.0",
  "description": "Member Portal for PFM Community Management Application",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "next dev -p 3002",
    "dev:container": "next dev -p 3002 -H 0.0.0.0",
    "build": "next build",
    "start": "next start -p 3002",
    "start:container": "NODE_ENV=production next start -p 3002 -H 0.0.0.0",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health-check": "node scripts/health-check.js",
    "container:status": "docker ps --filter name=pfm"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.32",
    "@solana/wallet-adapter-react-ui": "^0.9.31",
    "@solana/wallet-adapter-wallets": "^0.19.24",
    "@solana/web3.js": "^1.87.6",
    "@project-serum/anchor": "^0.26.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "date-fns": "^2.30.0",
    "zustand": "^4.4.7",
    "framer-motion": "^10.16.5",
    "react-intersection-observer": "^9.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4"
  },
  "keywords": [
    "member",
    "community",
    "voting",
    "solana",
    "web3",
    "react",
    "nextjs",
    "docker",
    "containerized"
  ],
  "author": "PFM Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "container": {
    "port": 3002,
    "environment": "development",
    "healthCheck": "/api/health",
    "dependencies": ["backend", "postgres", "redis", "solana-local-validator"]
  }
} 